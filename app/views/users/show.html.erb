

<div class="container">
  <div class="col-md-4">
    <h1><%= @user.username %></h1>
    <h3>Followers: <%= current_user.followers.count %> :: Following: <%= current_user.following.count %></h3>
    <br>
    <%= image_tag @user.avatar.url(:medium), class:"img-circle" %>
    <br>
    <br>
  </div>
<div class="col-md-2">
  <% if Tag.all != nil %>
  <h3>Popular Tags:</h3>
      <% Tag.most_popular.each do |tag| %>
      <div><%= button_to tag.name, tag_path(tag), method: :get, class: "btn btn-success" %></div>
      <% end %>
  <% end %>
</div>
  <div class="col-md-6">
    <h3>Trending</h3>
    <div><%= button_to Tag.trending.name, tag_path(Tag.trending), method: :get, class: "btn btn-success" %></div>
  </div>
</div>

<div class="container">
<% @user.pictures.each do |picture| %>
<div class=<%="col-md-4"-%>>
      <h4 align="center"><%= picture.title %><h4>
      <br>
      <%= image_tag picture.image.url(:medium) %>
      <%= button_to "Details", picture_path(picture), method: :get, class:"btn btn-primary" %>
</div>
<% end  %>
</div>
